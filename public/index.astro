import Layout from "../src/layouts/Layout.astro";
import { getPortfolios } from "../src/data/portfolio-notion";
import PortfolioList from "../src/components/portfolio/PortfolioList.astro";

const { portfolio } = Astro.params

const info = (await getPortfolios({ filterBy: portfolio }))[0]

if (!info) { 
  return Astro.redirect("/404")
}
