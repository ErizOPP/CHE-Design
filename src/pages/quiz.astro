---
import Layout from '../layouts/Layout.astro';
import QuizCard from '../components/quiz/QuizCard.astro';
import QuizHeader from '../components/quiz/QuizHeader.astro';
import QuizStart from '../components/quiz/QuizStart.astro';
import QuizImagen from '../components/quiz/QuizImagen.astro';
import QuizEnd from '../components/quiz/QuizEnd.astro';
import Simbolo from '/simboloche.svg'
---
<script type="text/javascript" src="../../data/quiz.js"></script>
<Layout title="CHE! Design - Quiz" titleHeader='Encuesta para Cliente'>
	<main>
        <article class="quiz">
            <QuizHeader title='Quiz'/>
            <section>
                <QuizStart
                subtitle='Nombre de su Negocio'
                id={1}
                />
                <QuizCard id={2} subtitle="Seleccione Estilo de Logo">
                    <QuizImagen imgLink='quiz/quiz-1-1.png' imgSelect="Logo texto e imagen compleja"/>
                    <QuizImagen imgLink='quiz/quiz-1-2.png' imgSelect="Logo solo texto tipo cocacola"/>
                    <QuizImagen imgLink='quiz/quiz-1-3.png' imgSelect="Solo isologo simple casi abstracto"/>
                    <QuizImagen imgLink='quiz/quiz-1-4.png' imgSelect="Logo elegante texto e iso fino"/>
                </QuizCard>
                <QuizCard id={3} subtitle="Seleccione Cantidad de Colores">
                    <QuizImagen imgLink='quiz/quiz-1-1.png' imgSelect="Un color"/>
                    <QuizImagen imgLink='quiz/quiz-1-2.png' imgSelect="Dos colores"/>
                    <QuizImagen imgLink='quiz/quiz-1-3.png' imgSelect="Cuatro Colores"/>
                    <QuizImagen imgLink='quiz/quiz-1-4.png' imgSelect="Colores y Degrades"/>
                </QuizCard>
                <QuizCard id={4} subtitle="Seleccione Estilo de Tipografía">
                    <QuizImagen imgLink='quiz/quiz-1-1.png' imgSelect="Tipografia Juguetona"/>
                    <QuizImagen imgLink='quiz/quiz-1-2.png' imgSelect="Tipografia fina y elegante"/>
                    <QuizImagen imgLink='quiz/quiz-1-3.png' imgSelect="Tipografia tipo scipt mano alzada"/>
                    <QuizImagen imgLink='quiz/quiz-1-4.png' imgSelect="Tipografia con serif común"/>
                </QuizCard>
                <QuizCard id={5} subtitle="Seleccione asdsadsadsadasd">
                    <QuizImagen imgLink='quiz/quiz-1-1.png' imgSelect="Logo texto e imagen compleja"/>
                    <QuizImagen imgLink='quiz/quiz-1-2.png' imgSelect="Logo solo texto tipo cocacola"/>
                    <QuizImagen imgLink='quiz/quiz-1-3.png' imgSelect="Solo isologo simple casi abstracto"/>
                    <QuizImagen imgLink='quiz/quiz-1-4.png' imgSelect="Logo elegante texto e iso fino"/>
                </QuizCard>
                <QuizEnd id={2}/>
            </section>
        </article>
    </main>
    <img src={Simbolo} alt="" class="simbolo">
</Layout>

<style>
    main{
        display: grid;
        place-items: center;
        margin-bottom: 2rem;
    }
    .quiz {
    min-width: 350px;
    max-width: 700px;
    margin: 1rem;
    background-color: var(--c-w25);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: var(--b-r-1);
    transition: background-color 0.3s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: var(--b-s-2);
    overflow: hidden;
    
    }
    section{
        display: -webkit-inline-box;
        position: relative;
        overflow-x: scroll;
    }
    section:hover{
        
    }
    @media screen and (max-width: 700px){
        .quiz{
            width: 400px;
        }
        section{
        margin-bottom: 2rem;
    }
}
</style>