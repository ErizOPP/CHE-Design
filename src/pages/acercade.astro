main{
    color: var(--c-d);
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}
article {
    align-self: center;
    padding: 0px 0.5rem;
}
    section.che{

    }
    section.me{

    }
    h3{
        text-shadow: 0px 0px 30px var(--c-l-g);
    }
    p{
        max-width: 50ch;
    }
    .social-media{
