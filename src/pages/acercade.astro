    }
    a{
        padding: 0.5rem;
        margin: 0px 0.6rem;
        text-decoration: none;
        font-size: 2rem;
        transition: 200ms;
        color: var(--c-d);
    }
        a:hover{
            color: var(--c-primary);
        }
