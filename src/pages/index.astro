---
import Layout from '../layouts/Layout.astro';
import Indice from '../components/Indice.astro';
import Logo from '/logo.svg';
import Simbolo from '/simboloche.svg'
import SwitchDarkLight from '../components/SwitchDarkLight.astro';

---

<Layout title="CHE! Design">
	
	<main>
		<div class="SwitchDarkLight"><SwitchDarkLight/></div>
		<img src={Simbolo} alt="" class="simbolo">
		<h1>Diseño Grafico</h1>
		<img class="logo" src={Logo} alt="Logo Che">
		<div class="menu">
			<ul role="list" class="link-card-grid">
				<Indice
					href=portfolio
					title="Portfolio"
					body="Algunos trabajos realizados."
				/>
				<Indice
				href=servicios
				title="Servicios"
				body="Conozca las posiblidades que le brindamos."
				/>
				<Indice
				href=acercade
				title="Acerca de"
				body="Conozca más sobre CHE!."
				/>
			</ul>
			<p>Una <span class="subrayado">Agencia Creativa</span> para <br>que <span class="subrayado">juntos destaquemos</span><br>tu <span class="subrayado">Negocio</span> :) </p>
		</div>
	</main>
</Layout>

<style>
.SwitchDarkLight{
	position: fixed;
	top: 50px;
	right: 50px;
}
main {
    padding: 6rem;
    display: flex;
    flex-direction: column;
    align-items: end;
}
img.logo{
	width: 500px;
}
main div.menu{
    display: flex;
    width: -webkit-fill-available;
    justify-content: space-between;

}
ul{
    width: 400px;
    margin: 0;
    padding: 0;
}
h1 {
	font-size: 3rem;
	font-weight: 800;
	margin: 0;
	color: var(--c-l);
	opacity: 0;
	position: fixed;
	top: -200px;
	z-index: -1;
}
@media screen and (max-width: 900px){
	main{
		gap: 20px;
		justify-content: center;
		align-items: center;
		width: auto;
		height: auto;

	}
	main div{
		gap: 20px;
		flex-direction: column-reverse;
	}
	img.logo{
		width: 510px;
	}
	ul {
		width: fit-content;
		position: static;
	}
}
@media screen and (max-width: 600px){
	.SwitchDarkLight{
	position: static;
		margin-top: -32px;
		margin-left: 95%
}
	main{
		gap: 20px;
		justify-content: center;
		align-items: center;
		width: auto;
		height: auto;
		padding: 2rem;
	}
	main div{
		gap: 20px;
		flex-direction: column-reverse;
	}
	img.logo{
		width: auto;
		margin-top: 40px;
	}
}

p{
	color: var(--c-primary);
	font-size: 28px;
	font-family: 'Times New Roman', Times, serif;
}
span.subrayado{
	text-decoration: underline;
	transition: color 300ms;
}
span.subrayado:hover{
	background-color: var(--c-primary);
	color: var(--c-l);
}
.c-primary {
	color: var(--c-primary);
}
.instructions {
	line-height: 1.6;
	margin: 1rem 0;
	border: 1px solid rgba(var(--accent), 25%);
	background-color: white;
	padding: 1rem;
	border-radius: 0.4rem;
}
.instructions code {
	font-size: 0.875em;
	font-weight: bold;
	background: rgba(var(--accent), 12%);
	color: rgb(var(--accent));
	border-radius: 4px;
	padding: 0.3em 0.45em;
}
.instructions strong {
	color: rgb(var(--accent));
}
.link-Indice-grid {
	display: inline-block;
	padding: 0;
}
.Indice{
	margin: 100px;
}


</style>