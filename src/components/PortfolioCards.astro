---
export interface Props {
	slug: string;
	content: string;
	images: string;
	category: string;
	program: string;

	title: string;
    imgsrc: string;
	href: string;
}


const {slug, content, images, category, program, href, title, imgsrc} = Astro.props;
---

<li class="portfolio-cards">
	<a href={href}>
		<h2>
			Trabajos de {title}
		</h2>
        <img src={imgsrc} alt={title}>
	</a>
</li>
<style>
	.portfolio-cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        width: 400px;
        height: 300px;
		margin: 20px;
		border: 2px solid var(--c-d);
		border-radius: 1rem;
		transition: background-color 0.3s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: var(--b-s-1);
        overflow: hidden;
    }

	.portfolio-cards > a {
		line-height: 1.6;
		padding: 0.5rem 0.8rem;
		border-radius: 0.6rem;
		color: var(--c-d);
	}
	h2 {
		margin: 0;
        padding: 0rem 0.8rem;
		font-family: 'Times New Roman', Times, serif;
		font-size: 2rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin: 0;
        padding: 0rem 0.8rem 0.5rem 0.8rem;
        font-size: 1.2rem;
        line-height: 140%;
	}
    img{
        width: 400px;
        border-radius: 1rem;
        padding: 0;
        margin-bottom: -15px;
        box-shadow: var(--b-s-2);
        transition: 300ms;
		border: 1px solid var(--c-d);
		transform: translateY(50px)
   }
   .portfolio-cards:hover {
		border: 2px solid var(--c-primary);
	}
    .portfolio-cards:is(:hover) h2 {
		color: var(--c-primary);
	}
    .portfolio-cards:is(:hover) img {
		transform: translateY(0px)
		border: 1px solid var(--c-primary);
	}
	.portfolio-cards:is(:hover) div {
		display: block;
		position: fixed;
		z-index: 20;
	}

</style>
