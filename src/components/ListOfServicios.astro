---
import ServicioItem from "./ServicioItem.astro";
import { servicio } from '../data/servicio'

const servicios = servicio
---

<ul>
  {
    servicios.map(({title, img, description, href}) => {
      return (
          <ServicioItem title={title} img={img} description={description} href={href} />
      )
    })
  }
</ul>

<style>
  ul{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>