---
export interface Props {
    title: any,
    description: String,
    cover: any,
    href: any
}

const {
  title,
  cover,
  description,
  href
} = Astro.props
---

<li>
  <a href={href}>
    <h2>{title}</h2>
    <p>{description}</p>    
    <img src={cover} alt={title}>
  </a>
</li>

<style>
li {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 400px;
  height: 300px;
  margin: 20px;
  border: 2px solid var(--c-d);
  border-radius: var(--b-r-1);
  transition: background-color 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  box-shadow: var(--b-s-1);
  overflow: hidden;
}

li > a {
  text-decoration: none;
  line-height: 1.6;
  padding: 0.5rem 0.8rem;
  border-radius: var(--b-r-06);
  color: var(--c-d);
  cursor: pointer;
  position: relative;
}
h2 {
  margin: 0;
  padding: 0rem 0.8rem;
  font-family: 'Times New Roman', Times, serif;
  font-size: 2rem;
  transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}
p {
  margin: 0;
  padding: 0rem 0.8rem 0.5rem 0.8rem;
  font-size: 1.2rem;
  line-height: 140%;
}
img{
  width: 400px;
  border-radius: var(--b-r-1);
  padding: 0;
  top: 10rem;
  left: -1px;
  box-shadow: var(--b-s-2);
  transition: 300ms;
  border: 1px solid var(--c-d);
  position: absolute;
}
  li:hover {
    border: 2px solid var(--c-primary);
    box-shadow: 0px 0px 500px var(--c-primary-02);
  }
  li:hover h2 {
    color: var(--c-primary);
  }
  li:hover img {
    top: 4rem;
    border: 1px solid var(--c-primary);
  }
  li:is(:hover) div {
    display: block;
    position: fixed;
    z-index: 20;
  }
</style>