---
export interface Props {
	id: string;
	content: string;
	images: string;
	program: string;
	url: string;

	category: [];
	excerpt: string;
	title: string;
    img: string;
}



const {id, excerpt, category, url, title, img} = Astro.props;
---

<li class="portfolio-cards">
	<a href={url}>
		<h2>{title}</h2>
		<hr>
		<section class="flex">
			<img src={img} alt={title}>
			<p>{excerpt}</p>
		</section>

		<ul>
			{category.map((category) => ( <p> {category} </p> ) ) }
		</ul>
	</a>
</li>
<style>
	.portfolio-cards {
		list-style-type: none;
        max-width: 800px;
		margin: 2rem;
		border: 2px solid var(--c-d);
		border-radius: 1rem;
		transition: background-color 0.3s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: var(--b-s-1);
        /*overflow: hidden;*/
    }

	section.flex{
		display: flex;
	}

	.portfolio-cards > a {
		line-height: 1.6;
		padding: 0.5rem 0.8rem;
		border-radius: 0.6rem;
		color: var(--c-d);
	}
	h2 {
		text-align: center;
		margin: 0;
        padding: 0rem 0.8rem;
		font-family: 'Times New Roman', Times, serif;
		font-size: 2rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin: 1rem;
        padding: 0rem 0.8rem 0.5rem 0.8rem;
        font-size: 1.2rem;
        line-height: 140%;
	}
	ul p{
		background-color: var(--c-subrayado);
		display: inline-block;
		border-radius: var(--b-r-06);
		padding: 0.3rem 0.5rem;
		color: var(--c-l);
		font-weight: 500;
	}
    img{
        max-width: 400px;
        border-radius: 1rem;
        margin: 1rem;
        box-shadow: var(--b-s-2);
        transition: 300ms;
		border: 1px solid var(--c-d);
		/*transform: translateY(50px)*/
   }
   .portfolio-cards:hover {
		border: 2px solid var(--c-primary);
	}
    .portfolio-cards:is(:hover) h2 {
		color: var(--c-primary);
	}
    .portfolio-cards:is(:hover) img {
		transform: translateY(0px)
		border: 1px solid var(--c-primary);
	}
	.portfolio-cards:is(:hover) div {
		display: block;
		position: fixed;
		z-index: 20;
	}

	@media screen and (max-width: 800px){
		.portfolio-cards {

    }

	section.flex{
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	img{
		align-self: center;
	}
}
@media screen and (max-width: 500px){

	img{
		max-width: 100%;
		border-radius: 0px;
		align-self: center;
		margin: 1rem 0;
	}
}
</style>
