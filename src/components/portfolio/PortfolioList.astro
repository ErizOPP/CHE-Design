---
import PortfolioCards from "../portfolio/PortfolioCards.astro";
import { getPortfolios } from '../../data/portfolio-notion'

const portoflios = await getPortfolios()
---

<ul>
  {
    portoflios.map(({ id, title, img, description, category, href}) => {
      return (

          <PortfolioCards id={id} title={title} img={img} description={description} category={category} href={href}/>

      )
    })
  }
</ul>

<style>
  ul{
    width: fit-content;
    margin: auto;
  }
</style>