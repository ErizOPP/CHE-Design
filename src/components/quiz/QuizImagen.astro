---
export interface Props {
    imgLink: string,
    imgSelect: string,
}
const {
    imgLink,
    imgSelect,
} = Astro.props
---

<img src={imgLink} alt={imgSelect}>

<style>
    img{
    max-width: 300px;
    max-height: 200px;
    min-width: 200px;
    min-height: 150px;
    border: 1px solid var(--c-primary);
    border-radius: var(--b-r-1);
    transition: cubic-bezier(0.44,-0.39, 0.41, 1.34) 300ms;

    box-sizing: border-box;
    cursor: pointer;
}
img:hover{
    border: 3px solid var(--c-extra);
    box-shadow: var(--b-s-2);
}
@media screen and (max-width: 700px){
    img{
    width: 300px;
    height: 200px;
    margin: auto;
    }
}
</style>